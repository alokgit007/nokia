{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Product",
    "description": "An employee data",
    "type": "object",
    "properties": {
        "name": {
            "description": "Name of the employee",
            "type": "string"
        },
        "dob": {
            "description": "date of birth of the employee",
            "type": "date"
        },
        "salary": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
        },
        "age": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true
        }       
    },
    "required": ["name", "dob", "salary","age"]
}